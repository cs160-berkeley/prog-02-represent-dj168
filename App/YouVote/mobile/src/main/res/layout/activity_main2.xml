<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.derrickhu.youvote.Main2Activity"
    android:background="#1f2d64">

    <TextView
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:textSize="22dp"
        android:text="Your Representatives for 94704!"
        android:id="@+id/topDisplay"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:background="#1f2d64"
        android:textColor="#cfac3c"
        android:gravity="center" />
    <TextView
        android:layout_width="390dp"
        android:layout_height="20dp"
        android:textSize="12dp"
        android:text="Tap on a portrait for more information!"
        android:id="@+id/instructions"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="#1f2d64"
        android:textColor="#cfac3c"
        android:gravity="top|center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/listView1" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        />


</LinearLayout>
